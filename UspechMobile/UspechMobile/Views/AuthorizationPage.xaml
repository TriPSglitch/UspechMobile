<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UspechMobile.Views.AuthorizationPage">

    <StackLayout>
        <Label Text="Почта" FontSize="Medium"/>
        <Entry Text="{Binding Login}" FontSize="Medium"/>
        <Label Text="Пароль" FontSize="Medium"/>
        <Entry Text="{Binding Password}" FontSize="Medium" IsPassword="True"/>
        <Button Text="Войти" Command="{Binding AuthorizeCommand}"/>
        <Button Text="Зарегистрироваться" Command="{Binding RegitrationCommand}"/>
    </StackLayout>

</ContentPage>
