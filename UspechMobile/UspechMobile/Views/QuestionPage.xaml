<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UspechMobile.Views.QuestionPage">

    <StackLayout>
        <Label Text="{Binding Text}" />

        <Entry Text="{Binding AnswerText}" Placeholder="Введите ответ" />

        <Button Text="Предыдущий вопрос" Command="{Binding PreviousQuestionCommand}" />
        <Button Text="Следующий вопрос" Command="{Binding NextQuestionCommand}" />
    </StackLayout>
</ContentPage>